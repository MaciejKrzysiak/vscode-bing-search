{
	"name": "bing-search",
	"displayName": "Bing Search",
	"description": "Query the Bing Search Engine.",
	"publisher": "MaciejKrzysiak",
	"repository": "https://github.com/MaciejKrzysiak/vscode-bing-search",
	"icon": "images/logo.png",
	"version": "0.0.8",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "bing-search.commandPaletteBingSearch",
				"title": "Bing Search"
			},
			{
				"command": "bing-search.editorContextMenuBingSearch",
				"title": "Bing Search"
			}
		],
		"menus": {
			"commandPalette": [
				{
				  "command": "bing-search.commandPaletteBingSearch",
				  "when": "bing-search.viewCommandPaletteBingSearchInCommandPalette == true"
				},
				{
				  "command": "bing-search.editorContextMenuBingSearch",
				  "when": "bing-search.viewEditorContextMenuBingSearchInCommandPalette == true"
				}
			  ],
			"editor/context": [
				{
				"when": "editorTextFocus",
				"command": "bing-search.editorContextMenuBingSearch",
				"group": "bing-search@1"
				}
			]
		},
		"keybindings": [
			{
				"command": "bing-search.commandPaletteBingSearch",
				"key": "ctrl+shift+1",
				"mac": "cmd+shift+1",
				"when": "bing-search.viewCommandPaletteBingSearchInCommandPalette == true"
			}
		  ]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.55.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"axios": "^0.21.1"
	}
}
